<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentInicial"
    android:background="@drawable/listaandroid">


    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="Lista de Tarefas" />

    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/view_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Titulo" />

        <EditText
            android:id="@+id/view_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingBottom="200dp"
            android:text="Descrição" />

        <Button
            android:id="@+id/btdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Data" />

    </LinearLayout>

    <Button
        android:id="@+id/button_inicio"
        android:layout_width="200dp"
        android:layout_height="68dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="100dp"
        android:text="Salvar"
        />

</FrameLayout>